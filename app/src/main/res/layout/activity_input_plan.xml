<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yanz.machine.shinva.planSearch.InputPlanActivity">
    <RelativeLayout
        android:id="@+id/rl_inputPlan_top"
        android:layout_alignParentTop="true"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@drawable/top_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/bt_inputPlan_search"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:textSize="12sp"
            android:textStyle="bold"
            android:background="@drawable/search_btn_background"
            android:text="搜索"
            android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <RelativeLayout
            android:id="@+id/rl_inputPlan_SearchFrameDelete"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:layout_toLeftOf="@id/bt_inputPlan_search"
            android:layout_width="match_parent"
            android:layout_height="30dp">
            <EditText
                android:id="@+id/et_inputPlan_search"
                android:inputType="phone"
                android:layout_marginRight="10dp"
                android:background="@drawable/search_frame"
                android:paddingLeft="32dp"
                android:textSize="12sp"
                android:text=""
                android:layout_width="match_parent" android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/iv_inputPlan_deleteText"
                android:layout_alignParentRight="true"
                android:src="@drawable/delete"
                android:layout_centerInParent="true"
                android:paddingRight="20dp"
                android:visibility="gone"
                android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </RelativeLayout>
    </RelativeLayout>
    <ListView android:id="@+id/lv_inputPlan_result"
        android:layout_below="@id/rl_inputPlan_top"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </ListView>
</RelativeLayout>
